{
  "name": "@framers/sql-storage-adapter",
  "version": "0.1.0",
  "description": "Robust cross-platform SQL storage abstraction with automatic fallbacks and runtime detection",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist tsconfig.build.tsbuildinfo",
    "build": "npm run clean && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "dev:test": "vitest"
  },
  "keywords": [
    "sql",
    "sqlite",
    "postgres",
    "postgresql",
    "database",
    "storage",
    "adapter",
    "abstraction",
    "capacitor",
    "sql.js",
    "better-sqlite3",
    "typescript",
    "cross-platform",
    "fallback",
    "webassembly"
  ],
  "author": "Framers (https://frame.dev)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wearetheframers/sql-storage-adapter.git"
  },
  "bugs": {
    "url": "https://github.com/wearetheframers/sql-storage-adapter/issues",
    "email": "team@frame.dev"
  },
  "homepage": "https://github.com/wearetheframers/sql-storage-adapter#readme",
  "devDependencies": {
    "@types/node": "^20.17.6",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "rimraf": "^5.0.7",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3",
    "vitest": "^1.6.0",
    "@types/pg": "^8.10.7"
  },
  "dependencies": {
    "sql.js": "^1.11.0",
    "pg": "^8.13.1"
  },
  "peerDependencies": {
    "@capacitor-community/sqlite": "^6.0.0",
    "better-sqlite3": "^11.10.0",
    "pg": "^8.13.1"
  },
  "peerDependenciesMeta": {
    "@capacitor-community/sqlite": {
      "optional": true
    },
    "better-sqlite3": {
      "optional": true
    },
    "pg": {
      "optional": true
    }
  }
}