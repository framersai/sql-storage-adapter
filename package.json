{
  "name": "@framers/sql-storage-adapter",
  "version": "0.3.3",
  "description": "Robust cross-platform SQL storage abstraction with automatic fallbacks and runtime detection",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js",
      "default": "./dist/types/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist tsconfig.build.tsbuildinfo",
    "build": "npm run clean && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "prepublishOnly": "npm run build && npm run test",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "coverage": "npm run test:coverage",
    "coverage:view": "open coverage/index.html || start coverage/index.html || xdg-open coverage/index.html",
    "docs": "typedoc --out docs src/index.ts",
    "docs:clean": "rimraf docs",
    "docs:serve": "npx http-server docs -p 8080 -o"
  },
  "keywords": [
    "sql",
    "sqlite",
    "postgres",
    "postgresql",
    "database",
    "storage",
    "adapter",
    "abstraction",
    "capacitor",
    "sql.js",
    "better-sqlite3",
    "indexeddb",
    "typescript",
    "cross-platform",
    "fallback",
    "webassembly",
    "pwa",
    "offline-first"
  ],
  "author": "Framers (https://frame.dev)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/framersai/sql-storage-adapter.git"
  },
  "bugs": {
    "url": "https://github.com/framersai/sql-storage-adapter/issues",
    "email": "team@frame.dev"
  },
  "homepage": "https://github.com/framersai/sql-storage-adapter#readme",
  "sideEffects": false,
  "devDependencies": {
    "@aws-sdk/client-s3": "^3.709.0",
    "@eslint/js": "^9.39.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.17.6",
    "@types/pg": "^8.10.7",
    "@vitest/coverage-v8": "^1.6.1",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "patch-package": "^8.0.0",
    "rimraf": "^5.0.7",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typedoc": "^0.26.11",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.46.2",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "pg": "^8.13.1",
    "sql.js": "^1.11.0"
  },
  "peerDependencies": {
    "@aws-sdk/client-s3": "^3.0.0",
    "@capacitor-community/sqlite": "^6.0.0",
    "better-sqlite3": "^12.0.0",
    "pg": "^8.13.1"
  },
  "peerDependenciesMeta": {
    "@aws-sdk/client-s3": {
      "optional": true
    },
    "@capacitor-community/sqlite": {
      "optional": true
    },
    "better-sqlite3": {
      "optional": true
    },
    "pg": {
      "optional": true
    }
  }
}
